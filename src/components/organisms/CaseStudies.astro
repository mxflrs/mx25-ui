---
import type { ICaseStudy } from '../../core/interfaces/case-study.interface';
import Container from '../molecule/Container.astro';
interface Props {
    caseStudies: ICaseStudy[];
}
const { caseStudies }: Props = Astro.props;
---

<Container title="Case Studies" className="pt-32">
    <div class="grid grid-cols-2 gap-4 relative">
        {
            caseStudies.map((cs) => (
                <div class="flex flex-col bg-white rounded-md min-h-56">
                    <p>{cs.title}</p>
                    <div class="flex gap-2 p-2">
                        {cs.technologies.map((t) => (
                            <p>{t.technology}</p>
                        ))}
                    </div>
                </div>
            ))
        }
    </div>
</Container>

<style>
    .relative::before {
        content: '';
        width: 32rem;
        height: 32rem;
        background-image: url('/public/images/x-symbol-2xl.svg');
        background-size: cover;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%); /* Corrected transform */
        z-index: -1;
    }
</style>
